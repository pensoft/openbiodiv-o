@prefix :        <http://proton.semanticweb.org/protons#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .
@prefix psys:    <http://proton.semanticweb.org/protons#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .

<http://proton.semanticweb.org/protonsys>  ## it will be necessary to update
      rdf:type owl:Ontology ;
      rdfs:comment "PROTON (Proto Ontology), System module" ;
      owl:versionInfo "\"0.2\"" .

psys:description
      rdf:type owl:DatatypeProperty ;
      rdfs:comment "A textual description of an entity. Usually a free text in some natural language. As defined in DC2003ISO for InformationResources. In a sense, it is a specializatoin of rdf:comment" ;
      rdfs:domain psys:Entity ;
      rdfs:label "Description" .

psys:mainLabel
      rdf:type owl:DatatypeProperty ;
      rdfs:domain psys:Entity ;
      rdfs:label "main Label" ;
      rdfs:range rdfs:Literal ;
      rdfs:subPropertyOf rdfs:label .

psys:laconicDescription
      rdf:type owl:DatatypeProperty ;
      rdfs:comment "An extremely short (typically, single sentence) description of an entity  " ;
      rdfs:label "Laconic Description" ;
      rdfs:subPropertyOf psys:description .

psys:Recognized
      rdf:type owl:Class ;
      rdfs:comment "To identify a source (like a program or a module), which is capable of recognizing and generating new entities. Typically, those are not checked, and thus not trustable. An example for this is the NE-recognition process in KIM/GATE." ;
      rdfs:label "Recognized" ;
      rdfs:subClassOf psys:EntitySource ;
      psys:systemPrimitive
              "T" .
